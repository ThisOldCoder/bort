= title "Login", :h2
- form_tag session_path do
  - field_set_tag 'Your Details' do
    = text_field_tag :login, @login, :label => 'User Name'
    = password_field_tag :password, @password
    = check_box_tag @remember_me, :label => 'Remember Me'
  - field_set_tag 'Login with OpenID' do
    = text_field_tag @openid_url

  .buttons
    = submit_tag 'Login'
    = link_to 'Forgotten Password', forgot_password_path
